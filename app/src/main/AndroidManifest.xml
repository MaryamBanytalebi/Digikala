<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.maktab.digikala">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Digikala">
        <activity android:name=".controller.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.activities.HomePageActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.Digikala.NoActionBar">
        </activity>
        <activity android:name=".controller.activities.SubCategoryActivity" />
        <activity android:name=".controller.activities.ProductDetailActivity" />
        <activity android:name=".controller.activities.SingleFragmentActivity" />
    </application>

</manifest>