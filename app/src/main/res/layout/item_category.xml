<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="category"
            type="org.maktab.digikala.model.ProductCategory" />
        <variable
            name="categoryHolder"
            type="org.maktab.digikala.adapter.CategoryAdapter" />

    </data>

    <RelativeLayout

        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_margin="8dp"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/image_category"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_image" />

        <TextView
            android:id="@+id/text_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/image_category"
            android:layout_alignTop="@+id/image_category"
            android:layout_alignBottom="@+id/image_category"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textStyle="bold"
            style="@style/TextAppearance.AppCompat.Medium"
            tools:text="@string/menu_category"/>
    </RelativeLayout>
</layout>